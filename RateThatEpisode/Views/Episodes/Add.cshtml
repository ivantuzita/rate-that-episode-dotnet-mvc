@model RatingViewModel

<form method="post">
    <div class="card bg-secondary p-3 mt-4">
        <h1 class="card-header"><strong>Adding new episode...</strong></h1>
        <div class="card-body pb-1">
            <div class="form-group">
                <label asp-for="Episode.Number" class="form-label"><strong>Episode Number:</strong></label>  
                <input asp-for="Episode.Number" class="form-control" placeholder="Enter episode number" />
                <span asp-validation-for="Episode.Number" class="badge bg-danger mt-2"></span>
                <small class="form-text text-muted">What is the episode number?</small>
            </div>
            <div class="form-group mt-4">
                <label asp-for="Episode.Name" class="form-label"><strong>Episode Name:</strong></label>
                <input asp-for="Episode.Name" class="form-control" placeholder="Enter episode name">
                <span asp-validation-for="Episode.Name" class="badge bg-danger mt-2"></span>
                <small class="form-text text-muted">What is the name of the episode? (If you don't know, it's okay to leave it blank!)</small>
            </div>
            <div class="form-group mt-4">
                <label asp-for="Episode.Notes" class="form-label"><strong>Your thoughts:</strong></label>
                <input asp-for="Episode.Notes" class="form-control" placeholder="Enter your thoughts about this episode">
                <span asp-validation-for="Episode.Notes" class="badge bg-danger mt-2"></span>
                <small class="form-text text-muted">What did you think about the episode? (You can always edit later or leave it blank!)</small>
            </div>
            <div class="form-group">
              <label asp-for="Episode.Series" class="form-label mt-4">Select series</label>
              <select class="form-select" asp-for="Episode.SeriesID">
                    @foreach (Series series in Model.GetSeries) {
                        <option value="@series.Id">@series.Name</option>
                    }
              </select>
              <small class="form-text text-muted">What is the series?</small>
            </div>
            <div class="form-group">
              <label asp-for="Episode.Rating" class="form-label mt-4">Rate the episode!</label>
              <select class="form-select" asp-for="Episode.Rating">
                  <option value="1">1</option>
                  <option value="2">2</option>
                  <option value="3">3</option>
                  <option value="4">4</option>
                  <option value="5">5</option>
                  <option value="6">6</option>
                  <option value="7">7</option>
                  <option value="8">8</option>
                  <option value="9">9</option>
                  <option value="10">10</option>
              </select>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-outline-dark">Save changes</button>
                <a asp-controller="Episodes" asp-action="Index" class="btn btn-outline-light">Cancel</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
      <partial name="_ValidationScriptsPartial" />
    }
}
@model IEnumerable<Episode>

<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h1><strong>Episode List:</strong></h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Episodes" asp-action="Add" class="btn btn-outline-dark">
                <i class="bi bi-plus-square"></i> &nbsp; Add new episode</a>
        </div>
    </div>
</div>

<table class="table text-center" style="width:100%">
    <thead>
        <tr class="table-dark" style="width: 500px">
            <th>
                Episode Number
            </th>
            <th>
                Episode Name
            </th>
            <th>
                Episode Synopsis
            </th>
            <th>
                Overall Rating
            </th>
            <th>
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model) {
            <tr class="table-light align-content-center">
                <td width="5%">
                    @obj.Number
                </td>
                <td width="30%">
                    <strong>@obj.Name</strong>
                </td>
                <td width="50%">
                    @obj.Synopsys
                </td>
                <td width="5%">
                    <strong>@obj.OverallRating</strong>
                </td>
                <td width="5%">
                    <a class="badge bg-warning" asp-controller="Episodes" asp-action="Edit" asp-route-id="@obj.Id"><i class="bi bi-pencil"> Edit</i></a>
                </td>
                <td width="5%">
                    <a class="badge bg-danger" asp-controller="Episodes" asp-action="Delete" asp-route-id="@obj.Id" onclick="return confirm('Are you sure you want to delete this?')"><i class="bi bi-trash"> Delete</i></a>
                </td>
            </tr>
        }
    </tbody>
</table>